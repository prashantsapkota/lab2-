<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btntst"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/toast_btn"
        app:layout_constraintEnd_toStartOf="@+id/txtview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/btzero"
        android:layout_width="99dp"
        android:layout_height="55dp"


        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/my_grey"
        android:text="@string/zero"
        app:layout_constraintEnd_toStartOf="@+id/txtview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntst"
        tools:text="Zero" />

    <Button
        android:id="@+id/btncnt"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/count_btn"
        app:layout_constraintEnd_toStartOf="@+id/txtview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btzero" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="258dp"
        android:layout_height="455dp"
        android:layout_marginEnd="16dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="176sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

</androidx.constraintlayout.widget.ConstraintLayout>